{{#partial "content"}}

<body>
<div class=" container-fluid">
    <div class="row">
        <div class="col-sm-4" id="center">
            <form action="/animal/new" method="POST" name="test">
                <div class="form-group">
                    <label for="nameOfAnimal"> Animal Name
                        <input id="nameOfAnimal" name="name" placeholder="Animal Name" type="text" tabindex="1" required autofocus>
                    </label>
                </div>
                <div class="form-group">
                    <label for="health">Health
                        <select name="health">
                            <option>Ill</option>
                            <option>Okay</option>
                            <option>Healthy</option>
                        </select>
                    </label>
                </div>
                <div class="form-group">
                    <label for="age">Age
                        <select name="age">
                            <option>Newborn</option>
                            <option>Young</option>
                            <option>Adult</option>
                        </select>
                    </label>
                </div>

                <div class="form-group">
                    <label for="rangerName">Ranger's Name:
                        <input id="ranger_name" name="ranger_name" type="text" required>
                    </label>
                </div>

                <div class="form-group">
                    <label for="location">Location
                        <select name="location">
                            <option>Zone A</option>
                            <option>Zone B</option>
                            <option>Zone C</option>
                        </select>
                    </label>
                </div>

                <div class="form-group">
                    <label for="sightingId">Sighting Id
                        <select name="sightingId" required>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                        </select>
                    </label>
                </div>
                <button type="submit" class="btn btn-success">Add Animal</button>
                <br>
            </form>
        </div>

        <div class="col-sm-4" id="col3">
            <div id="after_submit">
                <p id="message"></p>
                <p id="number_correct"></p>
                <img id="picture">
            </div>
        </div>
    </div>
</div>
</body>
{{/partial }}
{{> layout.hbs}}