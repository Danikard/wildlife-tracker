{{#partial "content"}}
<body>
<div class=" container-fluid">
    <div class="row">
        <div class="col-sm-4" id="center">
            <form action="/endangeredAnimal/new" method="POST" name="test">
                <div class="form-group">
                    <label for="nameOfAnimal">Animal Species</label>
                        <input type="text" name="name" id="nameOfAnimal" required class="form-control">
                </div>
                <div class="form-group">
                    <label for="health">Health </label>
                    <br>
                        <select name="health" class="form-control">
                            <option>Ill</option>
                            <option>Okay</option>
                            <option>Healthy</option>
                        </select>
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <br>
                        <select name="age" class="form-control">
                            <option>Newborn</option>
                            <option>Young</option>
                            <option>Adult</option>
                        </select>
                </div>
                <div class="form-group">
                    <label for="rangerName">Ranger's Name:
                        <input id="ranger_name" name="ranger_name" type="text" required class="form-control">
                    </label>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <br>
                        <select name="location" class="form-control">
                            <option>Zone A</option>
                            <option>Zone B</option>
                            <option>Zone C</option>
                        </select>
                </div>
                <button type="submit" class="btn btn-success">Add Animal</button>
                <br>
            </form>
        </div>
        </div>
    </div>
</div>
</body>
{{/partial }}
{{> layout.hbs}}